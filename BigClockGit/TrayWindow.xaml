<Window x:Class="BigClockGit.TrayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         WindowStyle="ToolWindow"
        Icon="Assets/favicon.ico"
        Title="BigClockGit" Height="170" Width="160" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Button Name="Reset" Content="Reset" HorizontalAlignment="Left" Margin="22,20,0,0" VerticalAlignment="Top" Width="100" Click="Reset_Click"/>
        <Button Name="SetAutoStart" Content="Start at login" HorizontalAlignment="Left" Margin="22,60,0,0" VerticalAlignment="Top" Width="100" Click="SetAutoStart_Click"/>
        <Button Name="RemoveAutoStart" Content="No start at login" HorizontalAlignment="Left" Margin="22,60,0,0" VerticalAlignment="Top" Width="100" Click="RemoveAutoStart_Click"/>
        <Button Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="22,100,0,0" VerticalAlignment="Top" Width="100" Click="Exit_Click"/>

    </Grid>
</Window>
